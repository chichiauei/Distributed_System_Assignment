<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>MatchServlet</servlet-name>
        <servlet-class>MatchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServerServlet</servlet-name>
        <servlet-class>ServerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatServlet</servlet-name>
        <servlet-class>StatServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>StatServlet</servlet-name>
        <url-pattern>/stats/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServerServlet</servlet-name>
        <url-pattern>/swipe/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MatchServlet</servlet-name>
        <url-pattern>/matches/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>


